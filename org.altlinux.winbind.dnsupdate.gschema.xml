<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="winbind-dnsupdate">
  <schema id="org.altlinux.winbind.dnsupdate" path="/org/altlinux/winbind/dnsupdate/">
    <key name="enable-update-ipv4" type="i">
      <range min="0" max="1"/>
      <default>1</default>
      <summary>Enable update IPv4 DNS records.</summary>
    </key>
    <key name="enable-update-ipv6" type="i">
      <range min="0" max="1"/>
      <default>0</default>
      <summary>Enable update IPv6 DNS records.</summary>
    </key>
    <key name="ipv4-ptr-update" type="i">
      <range min="0" max="1"/>
      <default>0</default>
      <summary>Enable update IPv4 (A) PTR DNS records.</summary>
    </key>
    <key name="ipv6-ptr-update" type="i">
      <range min="0" max="1"/>
      <default>0</default>
      <summary>Enable update IPv6 (AAAA) PTR DNS records.</summary>
    </key>
    <key name="ttl" type="i">
      <default>3600</default>
      <summary>Set TTL</summary>
      <description>Specifies how long DNS records should be kept in the cache before they are automatically updated</description>
    </key>
  </schema>
</schemalist>
